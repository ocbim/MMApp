<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card text-center shadow">
            <div class="card-header">
                <h3>Nueva Ordenes</h3>
            </div>
            <div class="card-body">
                <form action="/ordenes/new-ordenes" method="post">

                    <!-- # Code for orden-->
                    <div class="form-group">
                        <input type="text" name="codOrden" class="form-control" placeholder="Numero de Orden" required
                            autofocus>
                    </div>

                    <!-- Type Instalation-->
                    <div class="form-group">
                        <select name="typeInstalation" class="form-control" required>
                            <option selected disabled hidden>-----</option>
                            <optgroup label="MASMOVIL">
                                <option value="MM_NUEVA_INTERIOR">NUEVA_INTERIOR</option>
                                <option value="MM_NUEVA_EXTERIOR">NUEVA_EXTERIOR</option>
                                <option value="MM_REUTILIZADA">REUTILIZADA</option>
                                <option value="MM_AVERIA">AVERIA</option>
                                <option value="MM_AVERIA_FESTIVO">AVERIA_FESTIVO</option>
                                <option value="MM_NEBA">NEBA</option>
                                <option value="MM_NEBA_AUTOINST_INT">NEBA_AUTOINST_INT</option>
                                <option value="MM_NEBA_AUTOINST_EXT">NEBA_AUTOINST_EXT</option>

                            </optgroup>

                        </select>
                    </div>

                    <!--Meter the Instalation -->
                    <div class="form-group">
                        <select name="meter" class="form-control">
                            <option value="0" selected>0 Mts</option>
                            <option value="20">20 Mts</option>
                            <option value="30">30 Mts</option>
                            <option value="40">40 Mts</option>
                            <option value="50">50 Mts</option>
                            <option value="60">60 Mts</option>
                            <option value="80">80 Mts</option>
                            <option value="100">100 Mts</option>
                            <option value="150">150 Mts</option>
                            <option value="200">200 Mts</option>
                        </select>
                    </div>


                    <!-- DATE the instalation -->
                    <div class="form-group">
                        <input type="date" name="dateInstalation" value="" class="form-control">
                    </div>

                    <!-- Description Orden-->
                    <div class="form-group">
                        <textarea name="description" placeholder="Descripcion de la instalacion"
                            class="form-control"></textarea>
                    </div>

                    <!-- Puntos -->
                    <div class="form-group">
                        <input type="number" name="point" class="form-control" placeholder="Puntos" readonly>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
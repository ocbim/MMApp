<div class="col-md-6 mx-auto">
    <div class="card text-center shadow">
        <div class="card-header">
            <h3>Editar Ordenes</h3>
        </div>
        <div class="card-body">
            <form action="/ordenes/edit/{{ordenes.id}}?_method=PUT" method="post">
                {{!-- <input type="hidden" name="_method" value="PUT"> --}}

                <!-- # Code for orden-->
                <div class="form-group">
                    <input type="text" name="codOrden" class="form-control" value="{{ordenes.codOrden}}" required  readonly>
                </div>

                <!-- Type Instalation-->
                <div class="form-group">
                    <select name="typeInstalation" class="form-control"  required>
                        <option selected  hidden value="{{ordenes.typeInstalation}}">{{ordenes.typeInstalation}}</option>
                        <optgroup label="MASMOVIL">
                            <option value="MM_NUEVA_INTERIOR">NUEVA_INTERIOR</option>
                            <option value="MM_NUEVA_EXTERIOR">NUEVA_EXTERIOR</option>
                            <option value="MM_REUTILIZADA">REUTILIZADA</option>
                            <option value="MM_AVERIA">AVERIA</option>
                            <option value="MM_AVERIA_FESTIVO">AVERIA_FESTIVO</option>
                            <option value="MM_NEBA">NEBA</option>
                            <option value="MM_NEBA_AUTOINST_INT">NEBA_AUTOINST_INT</option>
                            <option value="MM_NEBA_AUTOINST_EXT">NEBA_AUTOINST_EXT</option>

                        </optgroup>
                        
                    </select>
                </div>

                <!--Meter the Instalation -->
                <div class="form-group">
                    <select name="meter" class="form-control">
                        <option selected  hidden value="{{ordenes.meter}}">{{ordenes.meter}} Mtr</option>
                        <option value="0">0 Mts</option>
                        <option value="20">20 Mts</option>
                        <option value="30">30 Mts</option>
                        <option value="40">40 Mts</option>
                        <option value="50">50 Mts</option>
                        <option value="60">60 Mts</option>
                        <option value="80">80 Mts</option>
                        <option value="100">100 Mts</option>
                        <option value="150">150 Mts</option>
                        <option value="200">200 Mts</option>
                    </select>
                </div>
                

                <!-- DATE the instalation -->
                <div class="form-group">
                    <input type="date" name="dateInstalation" class="form-control" value="{{ordenes.dateInstalation}}" >
                </div>

                <!-- Description Orden-->
                <div class="form-group">
                    <textarea name="description" class="form-control" cols="30" rows="10">{{ordenes.description}}</textarea>
                </div>

                <!-- Puntos -->
                <div class="form-group">
                    <input type="number" name="point" class="form-control" readonly value="{{ordenes.point}}">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>